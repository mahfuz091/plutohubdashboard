generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"

  binaryTargets = ["native", "debian-openssl-3.0.x", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String?
  profileImage String?
  password     String
  posts        Post[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Post {
  id              String        @id @default(uuid())
  title           String
  postSlug        String        @unique
  shortDesc       String?
  bannerImage     String
  bannerAltText   String? // new: image ALT text (SEO)
  metaTitle       String?       @db.VarChar(70) // new: meta title
  metaDescription String?       @db.VarChar(160) // new: meta description
  canonicalUrl    String? // new: custom canonical URL
  content         Json
  author          User?         @relation(fields: [authorId], references: [id])
  authorId        String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  BlogCategory    BlogCategory? @relation(fields: [blogCategoryId], references: [id])
  blogCategoryId  String?
  Comment         Comment[]

  @@index([authorId], name: "author_idx")
}

model Comment {
  id        String   @id @default(uuid())
  name      String
  email     String
  content   String
  post      Post     @relation(fields: [postId], references: [id])
  postId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model BlogCategory {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Post      Post[]
}
